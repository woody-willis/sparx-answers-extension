{
    "name": "Sparx Answers",
    "version": "2.0",
    "description": "Sparx Homework made easy!",
    "manifest_version": 3,
    "author": "Woody Willis",

    "action": {},

    "icons": {
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "host_permissions": [
        "*://*.sparxmaths.uk/*"
    ],

    "content_scripts": [{
        "matches": ["*://*.sparxmaths.uk/*"],
        "run_at": "document_start",
        "js": ["inject.js"]
    }],

    "web_accessible_resources": [{
        "resources": ["intercepter.js"],
        "matches": ["*://*.sparxmaths.uk/*"]
    }]
}